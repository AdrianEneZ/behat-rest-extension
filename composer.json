{
    "name": "zitec/api-testing-extension",
    "type": "behat-extension",
    "description": "API testing extension for Behat",
    "keywords": ["api", "test", "behat"],
    "license": "MIT",
    "authors": [
        {
            "name": "Bianca VADEAN",
            "email": "bianca.vadean@zitec.com"
        },
        {
            "name": "Marius BALTEANU",
            "email": "marius.balteanu@zitec.com"
        }
    ],
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-xml": "*",
        "behat/behat": "^3.6",
        "behat/mink": "^1.9",
        "behat/mink-extension": "^v2.3",
        "behat/mink-goutte-driver": "^1.3",
        "nelmio/alice": "^3.9",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "php": "^7.4 || ^8.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-0": {
            "Zitec\\ApiZitecExtension": "src/"
        }
    }
}